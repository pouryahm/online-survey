generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  surveys   Survey[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Survey {
  id        String   @id @default(cuid())
  ownerId   String
  title     String
  owner     User     @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
